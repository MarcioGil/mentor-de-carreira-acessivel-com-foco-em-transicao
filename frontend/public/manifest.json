  "shortcuts": [
    {
      "name": "Analisar Currículo",
      "short_name": "Análise",
      "description": "Análise rápida de currículo vs vaga",
      "url": "/analyze",
      "icons": [
        {
          "src": "/icons/shortcut-analyze.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Simular Entrevista",
      "short_name": "Entrevista",
      "description": "Treino de entrevista com IA",
      "url": "/interview",
      "icons": [
        {
          "src": "/icons/shortcut-interview.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Chat com Mentor",
      "short_name": "Chat",
      "description": "Conversa por voz com mentor IA",
      "url": "/chat",
      "icons": [
        {
          "src": "/icons/shortcut-chat.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Comandos de Voz",
      "short_name": "Voz",
      "description": "Ativar navegação por voz",
      "url": "/?voice=true",
      "icons": [
        {
          "src": "/icons/shortcut-voice.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  
  "protocol_handlers": [
    {
      "protocol": "web+mentoria",
      "url": "/share?url=%s"
    }
  ],
  
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "resume",
          "accept": [
            "application/pdf",
            "text/plain",
            ".pdf",
            ".txt",
            ".docx"
          ]
        }
      ]
    }
  },
  
  "file_handlers": [
    {
      "action": "/analyze",
      "accept": {
        "application/pdf": [".pdf"],
        "text/plain": [".txt"],
        "application/vnd.openxmlformats-officedocument.wordprocessingml.document": [".docx"]
      }
    }
  ],
  
  "edge_side_panel": {
    "preferred_width": 400
  },
  
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  
  "display_override": [
    "window-controls-overlay",
    "standalone",
    "minimal-ui"
  ],
  
  "prefer_related_applications": false,
  
  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=com.mentorcarreira.app",
      "id": "com.mentorcarreira.app"
    },
    {
      "platform": "itunes",
      "url": "https://apps.apple.com/app/mentor-carreira-ia/id123456789"
    }
  ]
}